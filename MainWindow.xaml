<Window x:Name="window"
        x:Class="MultiTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MultiTools"
        xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tz="http://schemas.abtsoftware.co.uk/transitionz"

        Title="MultiTools"
        Width="1280"
        Height="720"
        Closed="Window_Closed"
        Closing="Window_Closing"
        Loaded="Window_Loaded"
        ResizeMode="CanMinimize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.MyCommand}" Executed="MyCommandExecuted"/>
    </Window.CommandBindings>
    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="b2vc"></BooleanToVisibilityConverter>

        <ControlTemplate x:Key="AddSubButton" TargetType="{x:Type ToggleButton}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="iButton"
                    Grid.Column="0"
                    Width="32"
                    Height="32">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Setter Property="Source" Value="Buttons/etc/ExtNormal.png" />
                        </Style>
                    </Image.Style>
                </Image>
                <Grid
                    Grid.Column="1"
                    Width="292"
                    Height="32">
                    <Grid.Background>
                        <ImageBrush ImageSource="Images/title.png" />
                    </Grid.Background>
                    <TextBlock
                        x:Name="tbHeader"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                      Text="{TemplateBinding Content}"
                        FontSize="20"
                        Foreground="#FFFDFDFD" FontFamily="/MultiTools;component/Font/#Monotype Corsiva" >
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="0" ShadowDepth="1" />
                        </TextBlock.Effect>

                    </TextBlock>
                </Grid>
            </Grid>

            <ControlTemplate.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True" />
                        <Condition Property="IsMouseOver" Value="False" />
                        <Condition Property="IsPressed" Value="False" />
                        <Condition Property="IsEnabled" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/etc/ExtNormal.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True" />
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsPressed" Value="False" />
                        <Condition Property="IsEnabled" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/etc/ExtActive.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True" />
                        <Condition Property="IsPressed" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/etc/ExtClicked.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True" />
                        <Condition Property="IsEnabled" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/ExtDisabled.png" />
                    <Setter TargetName="tbHeader" Property="Foreground" Value="LightGray" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsEnabled" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/AddDisabled.png" />
                    <Setter TargetName="tbHeader" Property="Foreground" Value="LightGray" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsMouseOver" Value="False" />
                        <Condition Property="IsPressed" Value="False" />
                        <Condition Property="IsEnabled" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/AddNormal.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsPressed" Value="False" />
                        <Condition Property="IsEnabled" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/AddActive.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsPressed" Value="True" />
                        <Condition Property="IsEnabled" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/AddClicked.png" />
                </MultiTrigger>

            </ControlTemplate.Triggers>
        </ControlTemplate>


