                Grid.Row="0"
                Width="209"
                Height="361"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="{x:Null}"
                BorderThickness="0"
                FontFamily="/MultiTools;component/Font/#Formal436 BT"
                IsSynchronizedWithCurrentItem="False"
               
                
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectedItem="{Binding SelectedItem}">
                <ListView.Background>
                    <ImageBrush
                        ImageSource="Images/Paper.png"
                        TileMode="Tile"
                        Viewport="0 0 256 256"
                        ViewportUnits="Absolute" />
                </ListView.Background>

                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <Border Height="28"
                                            x:Name="Bd"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Width="13"
                                                Height="13"
                                          Margin="4,0"
                                                Source="{Binding Icon}">
                                                <Image.Triggers>
                                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    AutoReverse="True"
                                                                    RepeatBehavior="Forever"
                                                                    Storyboard.TargetProperty="(Effect).BlurRadius"
                                                                    From="3"
                                                                    To="6"
                                                                    Duration="0:0:0.8">
                                                                    <DoubleAnimation.EasingFunction>
                                                                        <CircleEase EasingMode="EaseInOut" />
                                                                    </DoubleAnimation.EasingFunction>
                                                                </DoubleAnimation>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>

                                                </Image.Triggers>
                                                <Image.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="3"
                                                        Direction="0"
                                                        RenderingBias="Quality"
                                                        ShadowDepth="0" />
                                                </Image.Effect>

                                            </Image>

                                            <TextBlock
                                                VerticalAlignment="Center"
                                        
                                                Margin="5,0"
                                                Grid.Column="1"
                                                Padding="0"
                                                FontSize="16"
                                                Foreground="Black"
                                                Text="{Binding Name}" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" />



                                            <Button
                                                Height="20"
                                                BorderThickness="0"
                                                Padding="0"                  
                                                Opacity="0"
                                                Grid.Column="2"
                                                Name="bOut"
                                                ToolTip="{DynamicResource RemoveFriend}"
                                                Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListView}, Path=DataContext.DeleteCommand}"
                                                Template="{StaticResource ExtButton}" />

                                        </Grid>

                                    </Border>

                                    <ControlTemplate.Triggers>

                                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                            <Setter Property="IsSelected" Value="True"/>
                                        </Trigger>

                                        <Trigger Property="IsMouseOver" Value="False">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard  >
                                                    <Storyboard TargetName="bOut" >
                                                        <DoubleAnimation   Duration="0:0:0.2" To="0" Storyboard.TargetProperty="Opacity" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CircleEase EasingMode="EaseInOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                        <ObjectAnimationUsingKeyFrames 
                                                            Storyboard.TargetProperty="Visibility">
                                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.2" Value="{x:Static Visibility.Collapsed}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>

                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard TargetName="bOut" >
                                                        <ObjectAnimationUsingKeyFrames 
                                                            Storyboard.TargetProperty="Visibility">
                                                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Visible}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                        <DoubleAnimation BeginTime="0:0:0.3" Duration="0:0:0.2" To="1" Storyboard.TargetProperty="Opacity" >
                                                            <DoubleAnimation.EasingFunction>
                                                                <CircleEase EasingMode="EaseInOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>

                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />

                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="ToolTip" Value="{Binding Hint}" />
                        <Style.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4C000000" />
                            </Trigger>


                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>


            </ListView>


            <TextBox
                x:Name="tbFriend"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,361,0,0"
                Width="183"
                Height="26"
                BorderBrush="Transparent"
                BorderThickness="0"
                FontFamily="/MultiTools;component/Font/#Formal436 BT"
                FontSize="18"
                KeyDown="TextBox_KeyDown"
                Text="{Binding NickForAdding, Mode=TwoWay}">
                <TextBox.Background>
                    <ImageBrush ImageSource="Buttons/TextBox.png" />
                </TextBox.Background>
            </TextBox>
            <Button
                BorderThickness="0"
                Padding="0"
                    
                x:Name="bAdd"
                Margin="183,361,0,0"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Grid.Column="0"
                Width="26"
                Height="26"
                Click="Button_Click_3f"
                
                PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown"
                Template="{DynamicResource AddButton}" />

        </Grid>
        <TextBlock TextWrapping="Wrap" x:Name="tbHackJoke" Visibility="Collapsed" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" Background="Black" Foreground="#00FF41" FontFamily="Lucida Console" FontSize="14">

        </TextBlock>
    
    </Grid>
</Window>
