<Window
    x:Class="MultiTools.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultiTools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MultiTools"
    Width="1073"
    Height="719"
    Closed="Window_Closed"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    ResizeMode="CanMinimize"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>

        <Style x:Key="ScrollBarLineButtonStyle" TargetType="{x:Type RepeatButton}">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Grid>
                            <Image Name="iButton">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="Scroll/Без имени-8.png" />
                                    </Style>

                                </Image.Style>
                            </Image>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="iButton" Property="Source" Value="Scroll/Без имени-10.png" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="iButton" Property="Source" Value="Scroll/Без имени-2.png" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="iButton" Property="Source" Value="Scroll/Без имени-9.png" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ScrollBarLineButtonBottomStyle" TargetType="{x:Type RepeatButton}">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Grid>
                            <Image Name="iButton">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="Scroll/Без имени-4.png" />
                                    </Style>

                                </Image.Style>
                            </Image>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="iButton" Property="Source" Value="Scroll/Без имени-6.png" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="iButton" Property="Source" Value="Scroll/Без имени-7.png" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="iButton" Property="Source" Value="Scroll/Без имени-5.png" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Width="16" Height="16">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="Scroll/Без имени-1.png" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid Cursor="{Binding AoE}">
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="18" />
                    <RowDefinition Height="*" />
                    <RowDefinition MaxHeight="18" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18" />
                </Grid.ColumnDefinitions>
                <RepeatButton
                    Grid.Row="0"
                    Height="18"
                    Command="ScrollBar.LineUpCommand"
                    PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown"
                    Style="{StaticResource ScrollBarLineButtonStyle}" />
                <Image
                    Grid.Row="1"
                    Source="Scroll/Без имени-3.png"
                    Stretch="Fill" />
                <Track
                    Name="PART_Track"
                    Grid.Row="1"
                    Width="16"
                    Margin="0,0,1,0"
                    HorizontalAlignment="Center"
                    IsDirectionReversed="True"
                    ViewportSize="NaN">

                    <Track.Thumb>
                        <Thumb
                            Width="16"
                            Height="16"
                            MinHeight="16"
                            MaxHeight="16"
                            Style="{StaticResource ScrollBarThumbStyle}" />
                    </Track.Thumb>

                </Track>
                <RepeatButton
                    Grid.Row="3"
                    Height="18"
                    Command="ScrollBar.LineDownCommand"
                    PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown"
                    Style="{StaticResource ScrollBarLineButtonBottomStyle}" />
            </Grid>
        </ControlTemplate>

        <Style TargetType="{x:Type ScrollBar}">

            <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
        </Style>

        <Style TargetType="ToolTip">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Content}" Value="">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Visibility" Value="Visible" />
            <Setter Property="Background" Value="#CC000000" />
            <Setter Property="Placement" Value="Left" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="/MultiTools;component/Font/#Formal436 BT" />
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush">

                <Setter.Value>
                    <RadialGradientBrush>
                        <GradientStop Offset="0" Color="#FF4F4F4F" />
                        <GradientStop Offset="1" Color="#FF767676" />
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BlurStyle" TargetType="Image">

            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="UIElement.RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="UIElement.RenderTransform">
                <Setter.Value>
                    <ScaleTransform />
                </Setter.Value>
            </Setter>
            <Setter Property="FrameworkElement.LayoutTransform">
                <Setter.Value>
                    <ScaleTransform x:Name="transform" />
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).Radius"
                                To="4"
                                Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).Radius"
                                To="0"
                                Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>

                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>








        <Style x:Key="ImageStyle" TargetType="Image">

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="13"
                        Direction="0"
                        RenderingBias="Quality"
                        ShadowDepth="0"
                        Color="#FFF5E9E9" />
                </Setter.Value>
            </Setter>
            <Setter Property="UIElement.RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="UIElement.RenderTransform">
                <Setter.Value>
                    <ScaleTransform />
                </Setter.Value>
            </Setter>
            <Setter Property="FrameworkElement.LayoutTransform">
                <Setter.Value>
                    <ScaleTransform x:Name="transform" />
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                To="1.03"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                To="1.03"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).BlurRadius"
                                To="25"
                                Duration="0:0:0.6">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Effect).BlurRadius"
                                To="13"
                                Duration="0:0:0.7">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleX"
                                To="1"
                                Duration="0:0:.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="RenderTransform.ScaleY"
                                To="1"
                                Duration="0:0:.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>


        <ControlTemplate x:Key="AudioB" TargetType="ToggleButton">

            <Image
                Name="iButton"
                Width="23"
                Height="23" />


            <ControlTemplate.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True" />
                        <Condition Property="IsMouseOver" Value="False" />
                        <Condition Property="IsPressed" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Audio/4.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True" />
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsPressed" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Audio/5.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True" />
                        <Condition Property="IsPressed" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Audio/6.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsMouseOver" Value="False" />
                        <Condition Property="IsPressed" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Audio/1.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsPressed" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Audio/2.png" />
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="False" />
                        <Condition Property="IsPressed" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter TargetName="iButton" Property="Source" Value="Audio/3.png" />
                </MultiTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
            <Grid>
                <Image Name="iButton">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="Buttons/ButtonNormal.png" />
                        </Style>

                    </Image.Style>
                </Image>
                <TextBlock
                    Name="lButton"
                    VerticalAlignment="Center"
                    FontFamily="/MultiTools;component/Font/#Monotype Corsiva"
                    FontSize="20"
                    Foreground="WhiteSmoke"
                    Text="{TemplateBinding Content}"
                    TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="0"
                            RenderingBias="Quality"
                            ShadowDepth="1" />
                    </TextBlock.Effect>
                </TextBlock>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/ButtonDisable.png" />
                </Trigger>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/ButtonActive.png" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="iButton" Property="Source" Value="Buttons/ButtonClicked.png" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>



        <!--  MODES  -->


        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="Button_PreviewMouseLeftButtonDown" />
        </Style>
        <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="RadioButton">
