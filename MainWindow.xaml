                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Rectangle
                            Width="20"
                            Height="20"
                            Fill="{Binding Name}"
                            OpacityMask="Black"
                            Stroke="#FF211E1E"
                            StrokeThickness="1"
                            ToolTip="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
